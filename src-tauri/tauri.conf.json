{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ghosty",
  "version": "0.1.0",
  "identifier": "com.ghosty.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Ghosty",
        "width": 1000,
        "height": 650,
        "minWidth": 1000,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false
      },
    {
      "label": "floating",
      "title": "Ghosty",
      "width": 28,
      "height": 28,
      "x": 0,
      "y": 0,
      "resizable": false,
      "decorations": false,
      "alwaysOnTop": true,
      "visible": true,
      "visibleOnAllWorkspaces": true,
      "focus": false,
      "transparent": true,
      "shadow": false,
      "skipTaskbar": true
    }
    ],
    "security": {
      "csp": "default-src 'self' asset: https://asset.localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc: https://api.openai.com https://*.openai.azure.com https://api.anthropic.com https:; img-src 'self' asset: https://asset.localhost blob: data:; font-src 'self'",
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "Voice-to-text with global hotkey",
    "longDescription": "Voice-to-text with recording triggered by global hotkey (hold key). Pre-prompt for context injection. Text to focused field or clipboard."
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["ghosty"]
      }
    }
  }
}
